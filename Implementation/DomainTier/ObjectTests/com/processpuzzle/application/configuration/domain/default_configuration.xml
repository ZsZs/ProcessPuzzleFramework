<?xml version="1.0" encoding="UTF-8"?>
<!-- ProcessPuzzle default configuration values. Don not change them! -->
<processPuzzleConfiguration
	xmlns="http://www.processpuzzle.com"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.processpuzzle.com http://www.processpuzzle.com/Schemas/ProcessPuzzleConfiguration.xsd">
	<application>
		<name>ProcessPuzzle</name>
		<version>1.0</version>
		<serverWorkingFolder>c:\\processpuzzle</serverWorkingFolder>
		<clientWorkingFolder>c:\\processpuzzle</clientWorkingFolder>
		<defaultUserAccount>
			<name>ProcessPuzzle</name>
			<password>ProcessPuzzle</password>
		</defaultUserAccount>
		<persistentDataInitializationStrategy>dropAndCreate</persistentDataInitializationStrategy>
	</application>
	
	<runtime>
		<environment>local</environment>
	</runtime>
	
	<frontController>
		<commandMapping>
			<class>com.itcodex.objectpuzzle.framework.application_configuration.control.ObjectPuzzleCommandMapping</class>
		</commandMapping>
	</frontController>
	
	<persistence>
		<persistenceStrategies>
			<persistenceStrategy name="TEST_STRATEGY">
				<repositoryEventHandlers>
					<repositoryEventHandler name="TEST_PROVIDER" description="Hibernate provider configured to use MS SQL Server, ObjectPuzzle_dc_test database">
						<eventHandlerClass>com.processpuzzle.persistence.domain.HibernatePersistenceProvider</eventHandlerClass>
						<!--  <propertyUrl>classpath:com/itcodex/objectpuzzle/framework/configuration/domaintier/domaintier_persistence_configuration.properties</propertyUrl> -->
	
						<!-- MS SQL specific properties(database:ObjectPuzzle_dt_test, login:opuser) -->
						<hibernate>
							<connection>
								<driver_class>net.sourceforge.jtds.jdbc.Driver</driver_class>
								<url>jdbc:jtds:sqlserver://localhost/ObjectPuzzle_dc_test</url>
								<username>opuser</username>
								<password>opuser</password>
							</connection>
							<dialect>org.hibernate.dialect.SQLServerDialect</dialect>
		
							<!-- Generic properties --> 
							<current_session_context_class>thread</current_session_context_class>
							<show_sql>false</show_sql>
							<transaction>
								<factory_class>org.hibernate.transaction.JDBCTransactionFactory</factory_class>
							</transaction>
							<cache>
								<provider_class>org.hibernate.cache.HashtableCacheProvider</provider_class>
								<use_second_level_cache>true</use_second_level_cache>
								<use_query_cache>true</use_query_cache>
							</cache>
							<c3p0>
								<max_size>5</max_size>
								<min_size>2</min_size>
								<timeout>5000</timeout>
								<max_statements>100</max_statements>
								<idle_test_period>3000</idle_test_period>
								<acquire_increment>2</acquire_increment>
								<validate>false</validate>
							</c3p0>
							<hbm2ddl>
								<auto>create-drop</auto>
							</hbm2ddl>
						</hibernate>
					</repositoryEventHandler>
				</repositoryEventHandlers>			
			</persistenceStrategy>
			<persistenceStrategy name="HSQL-Test_DB_With_Synchronization">
				<repositoryEventHandlers>
					<repositoryEventHandler name="HIBERNATE-HSQL-DOMAINTIER_TEST_DB" description="Hibernate provider, configured to use HSQL DB Server, DOMAINTIER_TEST_DB dabase.">
						<eventHandlerClass>com.processpuzzle.persistence.domain.HibernatePersistenceProvider</eventHandlerClass>
	
						<!-- HSQL specific properties-->
						<hibernate>
							<connection>
								<driver_class>org.hsqldb.jdbcDriver</driver_class>
								<url>jdbc:hsqldb:mem:test_db;shutdown=false</url>
								<username>sa</username>
								<password></password>
							</connection> 
							<dialect>org.hibernate.dialect.HSQLDialect</dialect>
		
							<!-- Generic properties --> 
							<current_session_context_class>thread</current_session_context_class>
							<show_sql>false</show_sql>
							<transaction>
								<factory_class>org.hibernate.transaction.JDBCTransactionFactory</factory_class>
							</transaction>
							<cache>
								<provider_class>org.hibernate.cache.HashtableCacheProvider</provider_class>
								<use_second_level_cache>true</use_second_level_cache>
								<use_query_cache>true</use_query_cache>
							</cache>
							<c3p0>
								<max_size>5</max_size>
								<min_size>2</min_size>
								<timeout>5000</timeout>
								<max_statements>100</max_statements>
								<idle_test_period>3000</idle_test_period>
								<acquire_increment>2</acquire_increment>
								<validate>false</validate>
							</c3p0>
							<hbm2ddl>
								<auto>create-drop</auto>
							</hbm2ddl>
						</hibernate>
					</repositoryEventHandler>
					<repositoryEventHandler name="BIDIRECTIONAL_SYNCHRONIZATION-DOMAINTIER_TEST_DB">
						<eventHandlerClass>com.processpuzzle.persistence.domain.BidirectionalSynchronizationStrategy</eventHandlerClass>
						<persistenceProviders>
							<repositoryEventHandler>
								<persistenceProviderClass>com.processpuzzle.persistence.domain.InMemoryPersistenceProvider</persistenceProviderClass>
							</repositoryEventHandler>
							<repositoryEventHandler>
								<persistenceProviderClass>com.itcodex.objectpuzzle.framework.persistence.domain.InMemoryPersistenceProvider</persistenceProviderClass>
							</repositoryEventHandler>
						</persistenceProviders>
					</repositoryEventHandler>
				</repositoryEventHandlers>
			</persistenceStrategy>
		</persistenceStrategies>

		<repositories>
			<repository class="com.processpuzzle.application.domain.ApplicationEventRepository" strategy="TEST_STRATEGY"/>
			<repository class="com.processpuzzle.application.security.domain.UserRepository" strategy="TEST_STRATEGY"/>
			<repository class="com.processpuzzle.fundamental_types.uniqueidentifier.domain.LastIdNumberRepository" strategy="TEST_STRATEGY"/>

			<repository class="com.processpuzzle.persistence.domain.TestEntityRepository" strategy="TEST_STRATEGY"/>
		</repositories>

		<persistentClasses>
			<persistentClassList class="com.processpuzzle.application.configuration.domain.TestClassList"/>
		</persistentClasses>

	</persistence>
	
	<internalization>
		<resourceBundle>classpath:com/processpuzzle/internalization/domain/TestResources</resourceBundle>
		<resourceBundle>classpath:com/processpuzzle/internalization/domain/AnotherTestResources</resourceBundle>
		<availableLocales>
			<locale>hu, HU</locale>
			<locale>en, US</locale>
			<locale>en, GB</locale>
		</availableLocales>
		<defaultLocale>hu, HU</defaultLocale>
		<localeDefinitions>classpath:com/processpuzzle/internalization/domain/LocaleDefinitions.xml</localeDefinitions>
	</internalization>
	
	<dataLoaders>
		<dataLoader>
			<dataLoaderClass>com.processpuzzle.sharedfixtures.domaintier.FrameworkDomaintierTestDatas</dataLoaderClass>
			<instantiationArguments>
				<argument></argument>
			</instantiationArguments>
		</dataLoader>
	</dataLoaders>
	
	<emailing>
		<system>
			<activation>passive</activation>
		</system>
		<host>
			<systemUser>
				<name>gabox01</name>
				<password>ggmail81</password>
			</systemUser>
		</host>
		<smtp>
			<host>smtp.gmail.com</host>
			<auth>true</auth>
			<debug>true</debug>
			<port>465</port>
			<socketFactory>
				<port>465</port>
				<class>javax.net.ssl.SSLSocketFactory</class>
				<fallback>false</fallback>
			</socketFactory>
		</smtp>
	</emailing>
	
	<beanContainer>
		<containerDefinitionPath>classpath:com/processpuzzle/application/configuration/domain/BeanContainerDefinition.xml</containerDefinitionPath>
	</beanContainer>
	
</processPuzzleConfiguration>