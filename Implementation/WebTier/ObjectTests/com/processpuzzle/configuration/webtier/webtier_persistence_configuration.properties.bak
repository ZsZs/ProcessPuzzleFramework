# for mssql (database:ObjectPuzzle_wt_test, login:opuser)
hibernate.connection.driver_class=net.sourceforge.jtds.jdbc.Driver
hibernate.connection.url=jdbc:jtds:sqlserver://localhost/ObjectPuzzle_wt_test
hibernate.connection.username=opuser
hibernate.connection.password=opuser
hibernate.dialect=org.hibernate.dialect.SQLServerDialect

